{
    "name": "Navigation",
    "description" : "A module for creating and maintaining navigation UI",
    "deps": [],
    "version": [1,0,0],
    "package": "core",

    "handlers": [
            {  "action": "load_nav",   "handler":   "Nav_Handler_Route" },
           { "action":  "route", "handler": "Nav_Handler_Route", "weight": 0},
           {"action": "menu", "handler": "Nav_Handler_Menu", "weight": 1000}
        ],

    "resources":[
        {
            "namespace": "Nav",
            "types": [
                {
                    "name": "model",
                    "dir": "model/",
                    "class": "Model"
                },
                {
                    "name": "view",
                    "dir": "view/",
                    "class": "View"
                },
                {
                    "name": "handler",
                    "dir": "handler/",
                    "class": "Handler"
                }
            ]
        }
    ]
}

{
    "name": "Page",
    "description" : "A module that encases content into an HTML page",
    "deps": ["nav"],
    "version": [1,0,0],
    "package": "core",

    "resources":[
        {
            "namespace": "Page",
            "types": [
                {
                    "name": "model",
                    "dir": "Model/",
                    "class": "Model"
                },
                {
                    "name": "view",
                    "dir": "View/",
                    "class": "View"
                },
                {
                    "name": "handler",
                    "dir": "Handler/",
                    "class": "Handler"
                }
            ]
        }
    ],

    "handlers":  [
                    {
                        "action": "layout", "handler": "Page_Handler_Layout", "weight": 0
                    }
            ],

    "page_layouts" : [
        {
            "page": "home",
            "style": "Zend_Layout",
            "file": "layouts/home",
            "mod": "page"
        },

        {
            "page": "*",
            "style": "Zend_layout",
            "file": "layouts/default",
            "mod": "page"
        }
    ]
    
}

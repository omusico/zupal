package game{	import flash.display.MovieClip;	import game.*;	import flash.geom.ColorTransform;	public class Move_arrow extends MovieClip {		// Constants:		// Public Properties:		// Private Properties:		// UI Elements:		// Initialization:		public function Move_arrow(p: Point_ij, angle, pog: Pog) {			configUI(p, angle, pog);		}		// Public Methods:		// Protected Methods:		// Private Methods:		protected function configUI(p: Point_ij, angle, pog: Pog):void {			move_to(p);			this.transform.colorTransform=clone_ct(pog.transform.colorTransform);			this.rotation=angle;		}		public function move_to(p: Point_ij, pClone = false) {			var pxy=p.as_point();			x=pxy.x;			y=pxy.y;			gotoAndPlay(1);		}		public function clone_ct(ct1: ColorTransform):ColorTransform {			return new ColorTransform(ct1.redMultiplier, ct1.greenMultiplier, ct1.blueMultiplier, ct1.alphaMultiplier, ct1.redOffset, ct1.greenOffset, ct1.blueOffset, ct1.alphaOffset);		}	}}
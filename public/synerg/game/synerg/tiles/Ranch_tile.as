package game.synerg.tiles{	import flash.display.MovieClip;	import flash.events.Event;	import flash.ui.Mouse;	import flash.events.MouseEvent;	import Synerg;	import game.ID_element;	import game.synerg.tiles.Tile_abstract;	import game.synerg.beings.Cowboy;	import game.synerg.Map;	import game.synerg.brands.*;	public class Ranch_tile extends Tile_abstract implements Tile,ID_element {		public function Ranch_tile() {			set_id(Synerg.new_id());			set_map(Synerg.zone_map);			_cowboys = new Vector.<Cowboy>();		}		public override function place():void {			super.place();			if (status=="placed") {				show_brand();			}		}		private var _brand:MovieClip;		//@TODO: one brand with many frames rather than seperate brands. 		public function show_brand() {			ranch_number=++_last_ranch_number;			switch ((ranch_number % BRANCH_VARIETIES) + 1) {				case 1 :					_brand = new Brand_1();					break;				case 2 :					_brand = new Brand_2();					break;				case 3 :					_brand = new Brand_3();					break;				case 4 :					_brand = new Brand_4();					break;				case 5 :					_brand = new Brand_5();					break;				case 6 :					_brand = new Brand_6();					break;			}			_brand.x=60;			_brand.y=15;			_brand.alpha=0.5;			if (ranch_number>BRANCH_VARIETIES) {				var frame:int = (int)( ranch_number/BRANCH_VARIETIES) + 1;				_brand.gotoAndStop(frame);			}			addChild(_brand);		}		private static var BRANCH_VARIETIES=6;		override public function piece_width():uint {			return 3;		}		override public function piece_height():uint {			return 3;		}		override public function piece_type():String {			return "ranch";		}		override protected function overlaps():Boolean {			var m:Map=get_map();			if (m.overlaps(this)) {				return true;			} else if (Synerg.forest_map.overlaps(this)) {				return true;			} else if (Synerg.building_map.overlaps(this)) {				return true;			}			return false;		}		public function cowboys() {			return _cowboys;		}		public var ranch_number:int;		private static var _last_ranch_number:int=0;		private var _cowboys:Vector.<Cowboy>;	}}